<?xml version="1.0"?>
<PropertyList>
  <name>Boeing 747-400 malfunctions</name>
  <layout>vbox</layout>

  <group>
    <layout>hbox</layout>
	
	<text>
		<label>Malfunctions</label>
	</text>
  
    <empty>
      <stretch>true</stretch>
    </empty>

    <button>
      <legend/>
      <key>Esc</key>
      <pref-width>16</pref-width>
      <pref-height>16</pref-height>
      <border>2</border>
      <binding>
        <command>dialog-close</command>
      </binding>
    </button>
  </group>

  <hrule/>
	
	<text>
		<label>Engine fire</label>
	</text>

	<group>
		<layout>hbox</layout>

		<checkbox>
			<label>Engine 1</label>
			<property>engines/engine[0]/on-fire</property>
			<binding>
				<command>dialog-apply</command>
			</binding>
			<live>true</live>
		</checkbox>

		<checkbox>
			<label>Engine 2</label>
			<property>engines/engine[1]/on-fire</property>
			<binding>
				<command>dialog-apply</command>
			</binding>
			<live>true</live>
		</checkbox>
		
		
		<checkbox>
			<label>Engine 3</label>
			<property>engines/engine[2]/on-fire</property>
			<binding>
				<command>dialog-apply</command>
			</binding>
			<live>true</live>
		</checkbox>
		
		
		<checkbox>
			<label>Engine 4</label>
			<property>engines/engine[3]/on-fire</property>
			<binding>
				<command>dialog-apply</command>
			</binding>
			<live>true</live>
		</checkbox>
	</group>
	
	<hrule/>
	
  <text>
    <label>Gear failure</label>
  </text>
  
  <group>
    <stretch>true</stretch>
    <layout>table</layout>
  
		<checkbox>
		  <row>0</row><col>3</col>
		  <halign>left</halign>
		  <live>true</live>
		  <property>/controls/failures/gear[0]/stuck</property>
		  <binding>
			<command>property-toggle</command>
			<property>/controls/failures/gear[0]/stuck</property>
		  </binding>
		</checkbox>

		<checkbox>
		  <row>1</row><col>0</col>
		  <halign>left</halign>
		  <live>true</live>
		  <property>/controls/failures/gear[1]/stuck</property>
		  <binding>
			<command>property-toggle</command>
			<property>/controls/failures/gear[1]/stuck</property>
		  </binding>
		</checkbox>
		
		<checkbox>
		  <row>1</row><col>2</col>
		  <halign>left</halign>
		  <live>true</live>
		  <property>/controls/failures/gear[2]/stuck</property>
		  <binding>
			<command>property-toggle</command>
			<property>/controls/failures/gear[2]/stuck</property>
		  </binding>
		</checkbox>
		
		<checkbox>
		  <row>1</row><col>4</col>
		  <halign>left</halign>
		  <live>true</live>
		  <property>/controls/failures/gear[3]/stuck</property>
		  <binding>
			<command>property-toggle</command>
			<property>/controls/failures/gear[3]/stuck</property>
		  </binding>
		</checkbox>
		
		<checkbox>
		  <row>1</row><col>6</col>
		  <halign>left</halign>
		  <live>true</live>
		  <property>/controls/failures/gear[4]/stuck</property>
		  <binding>
			<command>property-toggle</command>
			<property>/controls/failures/gear[4]/stuck</property>
		  </binding>
		</checkbox>

	</group>

</PropertyList>
